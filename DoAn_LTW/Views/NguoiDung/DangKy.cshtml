@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Share/LayoutUser.cshtml";
}

<div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="card shadow p-4" style="width: 400px;">
        <h2 class="text-center">Đăng Ký</h2>
        <hr />
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group mb-3">
                @Html.TextBox("UserName", "", new
                {
                    @class = "form-control",
                    @placeholder = "Nhập Tên đăng nhập"
                })
                <small class="text-danger">@ViewData["LoiUserName"]</small>
            </div>
            <div class="form-group mb-3">
                @Html.TextBox("FullName", "", new
                {
                    @class = "form-control",
                    @placeholder = "Nhập họ và tên"
                })
                <small class="text-danger">@ViewData["LoiFullName"]</small>
            </div>
            <div class="form-group mb-3">
                @Html.Password("Pass", "", new
                {
                    @class = "form-control",
                    @placeholder = "Nhập mật khẩu"
                })
                <small class="text-danger">@ViewData["LoiPass"]</small>
            </div>
            <div class="form-group mb-3">
                @Html.TextBox("Email", "", new
                {
                    @class = "form-control",
                    @placeholder = "Nhập Email"
                })
                <small class="text-danger">@ViewData["LoiEmail"]</small>
            </div>
            <div class="text-danger">@ViewBag.TB</div>
            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Đăng Ký</button>
            </div>
        }
        <div class="mt-3 text-center">
            <a href="@Url.Action("DangNhap", "NguoiDung")" class="text-decoration-none">
                Đã có tài khoản? Đăng nhập
            </a>
        </div>
    </div>
</div>
