
@{
    ViewBag.Title = "ThongTinTaiKhoan";
    Layout = "~/Views/Share/LayoutUser.cshtml";
    DoAn_LTW.Models.ACCOUNT TaiKhoan = Session["Account"] as DoAn_LTW.Models.ACCOUNT;
}

<style>
    /* Slidebar styling */
    .slidebar {
        width: 250px;
        background-color: #343a40;
        color: #fff;
        height: 100vh;
        overflow-y: auto;
        padding: 20px;
    }

        .slidebar a {
            display: block;
            color: #ffffff;
            text-decoration: none;
            padding: 10px 0;
            font-size: 16px;
        }

            .slidebar a:hover {
                background-color: #495057;
            }

    /* Nội dung chính */
    .content {
        flex: 1;
        padding: 20px;
    }
</style>

<div style="display: flex;">
    <!-- Slidebar -->
    <div class="slidebar">
        <h4 class="text-center text-light">Tài khoản</h4>
        <a href="@Url.Action("ThongTinTaiKhoan", "NguoiDung")">Thông tin Tài khoản</a>
        <a href="@Url.Action("SuaThongTinTaiKhoan", "NguoiDung")">Sửa Thông tin tài khoản</a>
        <a href="@Url.Action("DoiMatKhau", "NguoiDung")">Đổi mật khẩu</a>
    </div>

    <!-- Nội dung chính -->
    <div class="content">
        <div class="card shadow p-4">
            <h1>Thông tin tài khoản</h1>
            <hr />
            <table>
                <tr>
                    <th>Họ tên</th>
                    <th>Số điện thoại</th>
                </tr>
                <tr>
                    <td>
                        @Html.TextBoxFor(model => TaiKhoan.FULLNAME, new
                   {
                       @style = "width: 300px; height: 50px; border: 1px solid #ccc; border-radius: 4px; padding: 5px;",
                       @disabled = "disabled"
                   })
                    </td>
                    <td>
                        @Html.TextBoxFor(model => TaiKhoan.SODIENTHOAI, new
                   {
                       @style = "width: 300px; height: 50px; border: 1px solid #ccc; border-radius: 4px; padding: 5px;",
                       @disabled = "disabled"
                   })
                    </td>
                </tr>
                <tr>
                    <th>UserName</th>
                    <th>Mật khẩu</th>
                </tr>
                <tr>
                    <td>
                        @Html.TextBoxFor(model => TaiKhoan.USERNAME, new
                   {
                       @style = "width: 300px; height: 50px; border: 1px solid #ccc; border-radius: 4px; padding: 5px;",
                       @disabled = "disabled"
                   })
                    </td>
                    <td>
                        @Html.TextBoxFor(model => TaiKhoan.PASS, new
                   {
                       @style = "width: 300px; height: 50px; border: 1px solid #ccc; border-radius: 4px; padding: 5px;",
                       @disabled = "disabled"
                   })
                    </td>
                </tr>
                <tr>
                    <th>Email</th>
                </tr>
                <tr>
                    <td>
                        @Html.TextBoxFor(model => TaiKhoan.EMAIL, new
                   {
                       @class = "form-control",
                       @disabled = "disabled"
                   })
                    </td>
                </tr>
                <tr>
                    <th>Địa chỉ</th>
                </tr>
                <tr>
                    <td>
                        @Html.TextBoxFor(model => TaiKhoan.DIACHI, new
                   {
                       @class = "form-control",
                       @disabled = "disabled"
                   })
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>