
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Share/LayoutUser.cshtml";
}

<h2>DangNhap</h2>

@using (Html.BeginForm())
{

    @Html.ValidationSummary(true)
    {
        <div>
            @Html.TextBox("UserName", "", new
       {
           @class = "form-control",
           @placeholder = "Nhập Tên đăng nhập"
       })   @ViewData["LoiUserName"]
        </div>
        <div>
            @Html.TextBox("Pass", "", new
       {
           @class = "form-control",
           @placeholder = "Nhập mật khẩu"
       }) @ViewData["LoiPass"]
        </div>
    }
<div>@ViewBag.ThongBao</div>
    <button type="submit">Đăng Nhập</button>
}
