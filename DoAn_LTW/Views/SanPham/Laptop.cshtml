@model DoAn_LTW.Models.SanPham_ThuongHieu
@{
    ViewBag.Title = "Laptop";
    Layout = "~/Views/Share/LayoutUser.cshtml";
}

<style>
    /* Slidebar styling */
    .slidebar {
        width: 250px;
        background-color: #343a40;
        color: #fff;
        height: 100vh;
        overflow-y: auto;
        padding: 20px;
    }

        .slidebar a {
            display: block;
            color: #ffffff;
            text-decoration: none;
            padding: 10px 0;
            font-size: 16px;
        }

            .slidebar a:hover {
                background-color: #495057;
            }

    /* Nội dung chính */
    .content {
        flex: 1;
        padding: 20px;
    }
</style>

<div style="display: flex;">
    <!-- Slidebar -->
    <div class="slidebar">
        <h4 class="text-center text-light">Thương Hiệu</h4>
        @foreach (var thuonghieu in Model.DanhSachThuongHieu)
        {
            <a href="#">@thuonghieu.TenThuongHieu</a>
        }
    </div>

    <!-- Nội dung chính -->
    <div class="content">
        <h1>Sản Phẩm</h1>
        <h2 class="text-center mt-4">Tất cả sản phẩm</h2>

        <div class="container mt-4">
            <div class="row">
                @foreach (var item in Model.DanhSachSanPham)
                {
                    <div class="col-md-3 mb-4">
                        <div class="card h-100">
                            <img src="~/images2/images/@item.HinhAnh" class="card-img-top" alt="Hình ảnh sản phẩm" />
                            <div class="card-body text-center">
                                <h5 class="card-title">@item.TenSanPham</h5>
                                <a href="@Url.Action("XemChiTiet", "SanPham", new { @msp = item.MaSanPham })" class="btn btn-primary">Xem chi tiết</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

