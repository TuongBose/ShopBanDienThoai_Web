@{
    ViewBag.Title = "Đặt Hàng Thành Công";
    Layout = "~/Views/Share/LayoutUser.cshtml";
}

<div class="container my-5">
    <!-- Header thông báo -->
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="alert alert-success">
                <h2>Đặt hàng thành công!</h2>
                <p class="lead">Cảm ơn bạn đã mua sắm tại cửa hàng của chúng tôi. Đơn hàng của bạn đã được xác nhận.</p>
            </div>
        </div>
    </div>

    <!-- Button quay lại trang chủ hoặc giỏ hàng -->
    <div class="row justify-content-center mt-4">
        <div class="col-md-4 text-center">
            <a href="@Url.Action("TrangChu", "TrangChu")" class="btn btn-primary btn-lg w-100">Quay lại Trang Chủ</a>
        </div>
    </div>
</div>

<style>
    .container {
        max-width: 800px;
    }

    .alert-success {
        background-color: #28a745;
        color: white;
        border-radius: 5px;
        padding: 20px;
        margin-bottom: 30px;
    }

    .card {
        border: none;
        border-radius: 10px;
    }

    .card-header {
        background-color: #007bff;
        color: white;
        font-size: 18px;
        font-weight: bold;
        text-align: center;
    }

    .list-group-item {
        font-size: 16px;
        padding: 15px;
    }

    .btn-primary, .btn-secondary {
        font-size: 18px;
        padding: 12px 20px;
        margin-top: 10px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

        .btn-primary:hover, .btn-secondary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
</style>
