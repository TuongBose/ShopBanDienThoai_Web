@model IEnumerable<DoAn_LTW.Models.ACCOUNT>
@{
    ViewBag.Title = "QuanLyAdmin";
    Layout = "~/Views/Share/LayoutAdmin.cshtml";
}

<style>
    /* Styling for the product management table */
    .table {
        margin-top: 20px;
        width: 100%;
        border-collapse: collapse;
        font-size: 14px;
    }

        .table th, .table td {
            text-align: left;
            padding: 10px;
        }

        .table thead th {
            background-color: #343a40;
            color: #ffffff;
        }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f9f9f9;
    }

    .table-striped tbody tr:hover {
        background-color: #f1f1f1;
    }

    .img-thumbnail {
        display: block;
        margin: auto;
        width: 100px;
        height: 100px;
    }

    .text-right {
        margin-bottom: 10px;
    }

    .btn-sm {
        margin-right: 5px;
    }

    .text-center {
        text-align: center;
    }
</style>

<h2 class="text-center mt-4">Quản Lý Admin</h2>
@if (TempData["Message"] != null)
{
    <div class="alert alert-danger">
        @TempData["Message"]
    </div>
}

<p class="text-right">
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addModal">
        Thêm mới Admin
    </button>
</p>

<table class="table table-bordered table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>USERID</th>
            <th>USERNAME</th>
            <th>MẬT KHẨU</th>
            <th>EMAIL</th>
            <th>FULLNAME</th>
            <th>ĐỊA CHỈ</th>
            <th>SỐ ĐIỆN THOẠI</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.USERID</td>
                <td>@item.USERNAME</td>
                <td>@item.PASS</td>
                <td>@item.EMAIL</td>
                <td>@item.FULLNAME</td>
                <td>@item.DIACHI</td>
                <td>@item.SODIENTHOAI</td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal Thêm mới -->
<div class="modal fade" id="addModal" tabindex="-1" aria-labelledby="addModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addModalLabel">Thêm mới hóa đơn phòng</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Form Thêm mới -->
                @using (Html.BeginForm("ThemAdmin", "Admin", FormMethod.Post, new { @class = "form" }))
                {
                    <label class="form-label">UserName</label>
                    <div>
                        @Html.TextBox("UserName", "", new
                   {
                       @class = "form-control",
                       @placeholder = "Nhập UserName"
                   })
                    </div>

                    <label class="form-label">Mật khẩu</label>
                    <div>
                        @Html.TextBox("Password", "", new
                   {
                       @class = "form-control",
                       @placeholder = "Nhập mật khẩu"
                   })
                    </div>

                    <label class="form-label">Email</label>
                    <div>
                        @Html.TextBox("Email", "", new
                   {
                       @class = "form-control",
                       @placeholder = "Nhập Email"
                   })
                    </div>

                    <label class="form-label">Họ tên</label>
                    <div>
                        @Html.TextBox("FullName", "", new
                   {
                       @class = "form-control",
                       @placeholder = "Nhập họ tên"
                   })
                    </div>

                    <label class="form-label">Địa chỉ</label>
                    <div>
                        @Html.TextBox("DiaChi", "", new
                   {
                       @class = "form-control",
                       @placeholder = "Nhập địa chỉ"
                   })
                    </div>

                    <label class="form-label">Số điện thoại</label>
                    <div>
                        @Html.TextBox("SDT", "", new
                   {
                       @class = "form-control",
                       @placeholder = "Nhập số điện thoại"
                   })
                    </div>
                    <br />
                    <button type="submit" class="btn btn-primary">Lưu</button>
                }
            </div>
        </div>
    </div>
</div>