@model IEnumerable<DoAn_LTW.Models.ThuongHieu>

@{
    ViewBag.Title = "Quản Lý Thương Hiệu";
    Layout = "~/Views/Share/LayoutAdmin.cshtml";
}

<h2 class="text-center mt-4">Quản Lý Thương Hiệu</h2>

<a href="@Url.Action("ThemThuongHieu", "Admin")" class="btn btn-primary mb-3">Thêm Thương Hiệu</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>STT</th>
            <th>Tên Thương Hiệu</th>
            <th>Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @* loop hien thi ds thuong hieu *@
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaThuongHieu</td>
                <td>@item.TenThuongHieu</td>
                <td>
                    <a href="@Url.Action("SuaThuongHieu", "Admin", new { id = item.MaThuongHieu })" class="btn btn-warning btn-sm">Sửa</a>
                    <a href="@Url.Action("XoaThuongHieu", "Admin", new { id = item.MaThuongHieu })" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc chắn muốn xóa thương hiệu này?')">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
