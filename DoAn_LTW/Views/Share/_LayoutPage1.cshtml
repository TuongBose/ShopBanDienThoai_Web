<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />

    <style>
        body {
            margin: 0; /* Đặt margin cho body bằng 0 */
            padding-bottom: 60px; /* Đặt padding dưới cùng để tránh che khuất nội dung */
        }

        footer {
            position: fixed; /* Đặt footer ở vị trí cố định */
            left: 0;
            bottom: 0; /* Đặt footer ở dưới cùng */
            width: 100%; /* Đặt chiều rộng của footer 100% */
            background-color: #343a40; /* Màu nền của footer */
            color: #ffffff; /* Màu chữ */
            text-align: center; /* Căn giữa văn bản */
            padding: 15px 0; /* Padding cho footer */
        }
    </style>
</head>
<body>
    <!-- Navbar chính -->
    <nav class="navbar navbar-expand-sm bg-success navbar-dark">
        <a class="navbar-brand" href="@Url.Action("TrangChu","TrangChu")">
            <img src="~/Images/logo-huit-xanh.png" style="width:160px; height:37px;" />
        </a>
        <div class="col-4">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="#">Trang chủ</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Liên hệ</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Sản phẩm</a>
                </li>
            </ul>
        </div>
        <div class="col-3">
            <!-- Thanh tìm kiếm -->
            <form class="d-flex" action="/timkiem" method="get">
                <input class="form-control me-2" type="search" placeholder="Tìm kiếm sản phẩm" aria-label="Search" name="query">
                <button class="btn btn-light" type="submit">Tìm kiếm</button>
            </form>
        </div>
        <div class="col-2">
            <ul class="navbar-nav ms-auto">
                <!-- Giỏ hàng -->
                <li class="nav-item">
                    <a class="nav-link" href="/giohang">
                        <i class="bi bi-cart"></i>
                        <img src="~/Images/Icon/Bag.png" style="width: 24px; height: 24px;" />Giỏ hàng
                    </a>
                </li>
                <!-- Đăng nhập -->
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("DangNhap","NguoiDung")">
                        <i class="bi bi-person-circle"></i>
                        <img src="~/Images/Icon/user.png" style="width: 24px; height: 24px;" />Đăng nhập
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Thanh điều hướng ngang (Sidenav) bên dưới Navbar chính -->
    <nav class="navbar navbar-expand-sm bg-success navbar-dark">
        <div class="container">
            <ul class="navbar-nav mx-auto">
                <li class="nav-item">
                    <a class="nav-link btn btn-outline-primary mx-2" href="#">
                        <img src="~/Images/Icon/Phone.png" style="width: 24px; height: 24px;" /> Dien thoai
                    </a>
                </li>
		<li class="nav-item">
                    <a class="nav-link btn btn-outline-primary mx-2" href="#">
                        <img src="~/Images/Icon/Tablet.png" style="width: 24px; height: 24px;" /> May Tinh Bang
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link btn btn-outline-primary mx-2" href="#">
                        <img src="~/Images/Icon/ipad.png" style="width: 24px; height: 24px;" />Ipad
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link btn btn-outline-primary mx-2" href="#">
                        <img src="~/Images/Icon/Laptop.png" style="width: 24px; height: 24px;" />Laptop
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link btn btn-outline-primary mx-2" href="#">
                        <img src="~/Images/Icon/Wire.png" style="width: 24px; height: 24px;" />Phu kien
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link btn btn-outline-primary mx-2" href="#">
                        <img src="~/Images/Icon/sim.png" style="width: 24px; height: 24px;" />Sim, The cao
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Hien thi noi dung -->
    <div class="container-fluid">
        @RenderBody()
    </div>

    <!-- Thanh footer -->
    <footer class="bg-dark text-light text-center py-3">
        <div class="container">
            <p>&copy; 2024 Công ty của bạn. Tất cả các quyền được bảo lưu.</p>
            <ul class="list-inline">
                <li class="list-inline-item"><a href="#" class="text-light">Điều khoản sử dụng</a></li>
                <li class="list-inline-item"><a href="#" class="text-light">Chính sách bảo mật</a></li>
                <li class="list-inline-item"><a href="#" class="text-light">Liên hệ</a></li>
            </ul>
        </div>
    </footer>

    <!-- Thêm Bootstrap Icons -->
    @*<script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>*@
</body>
</html>
