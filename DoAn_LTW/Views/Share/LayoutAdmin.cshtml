<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        /* Sidebar styling */
        .sidebar {
            height: 100vh; /* Full height */
            width: 250px; /* Sidebar width */
            position: fixed;
            top: 0;
            left: 0;
            background-color: #343a40;
            color: white;
            padding-top: 20px;
            overflow-y: auto;
        }

            .sidebar a {
                text-decoration: none;
                color: #ffffff;
                display: block;
                padding: 10px 20px;
            }

                .sidebar a:hover {
                    background-color: #495057;
                }

        .content {
            margin-left: 250px;
            padding: 20px;
        }
    </style>
</head>

<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <h4 class="text-center">Admin Panel</h4>
        <hr />
        <a href="@Url.Action("Index", "Admin")">Dashboard</a>
        <a href="@Url.Action("QuanLySanPham", "Admin")">Quản Lý Sản Phẩm</a>
        <a href="@Url.Action("ThemSanPham", "Admin")">Thêm Sản Phẩm</a>
        <a href="@Url.Action("QuanLyDonHang", "Admin")">Quản Lý Đơn Hàng</a>
        <a href="@Url.Action("QuanLyNguoiDung", "Admin")">Quản Lý Người Dùng</a>
        <hr />
        <a href="@Url.Action("Logout", "Admin")" class="text-danger">Đăng Xuất</a>
    </div>

    <!-- Main content -->
    <div class="content">
        <div class="container">
            @RenderBody()
        </div>
    </div>
</body>
</html>
