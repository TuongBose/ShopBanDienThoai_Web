<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        /* Sidebar styling */
        .sidebar {
            height: 100vh; /* Full height */
            width: 250px; /* Sidebar width */
            position: fixed;
            top: 0;
            left: 0;
            background-color: #343a40;
            color: white;
            padding-top: 20px;
            overflow-y: auto;
        }

            .sidebar a {
                text-decoration: none;
                color: #ffffff;
                display: block;
                padding: 10px 20px;
            }

                .sidebar a:hover {
                    background-color: #495057;
                }

        .content {
            margin-left: 250px;
            padding: 20px;
        }
    </style>

    <!-- Render optional head content -->
    @RenderSection("Head", required: false)
</head>

<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <a href="@Url.Action("TrangChuAdmin", "TrangChu")"><h4 class="text-center">Admin Panel</h4></a>
        <hr />
        <a href="@Url.Action("QuanLyLoaiSanPham", "Admin")">Quản Lý Loại Sản Phẩm</a>
        <hr />
        <a href="@Url.Action("QuanLySanPham", "Admin")">Quản Lý Sản Phẩm</a>
        <hr />
        <a href="@Url.Action("QuanLyThuongHieu", "Admin")">Quản Lý Thương Hiệu</a>
        @*<a href="#">Thêm Thương Hiệu</a>*@
        <hr />
        <a href="@Url.Action("QuanLyDonHang", "Admin")">Quản lý đơn hàng</a>
        <a href="@Url.Action("QuanLyKhachHang", "Admin")">Quản lý tài khoản khách hàng</a>
        <a href="@Url.Action("QuanLyAdmin", "Admin")">Quản lý tài khoản Admin</a>
        <hr />
        <a href="@Url.Action("TrangChu", "TrangChu")">Quay lại trang chủ User</a>
        <a href="@Url.Action("DangXuat", "NguoiDung")" class="text-danger">Đăng Xuất</a>
    </div>

    <!-- Main content -->
    <div class="content">
        <div class="container">
            @RenderBody()
        </div>
    </div>

    <!-- Include Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/jquery-3.6.0.min.js"></script> <!-- Nếu sử dụng jQuery -->
    <!-- Render optional scripts -->
    @RenderSection("Scripts", required: false)
</body>
</html>
